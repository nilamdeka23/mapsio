<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:background="@color/bg_row_background"
        android:id="@+id/fav_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:popupTheme="@style/AppTheme.PopupOverlay" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/current_loc_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/curr_loc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/settings_curr_loc"
                android:textColor="@android:color/black"
                android:textSize="21dp" />
            <!--android:textStyle="bold"-->

            <TextView
                android:id="@+id/curr_loc_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/padd_10"
                android:layout_alignParentStart="true"
                android:layout_below="@id/curr_loc_title"
                android:layout_toLeftOf="@+id/curr_loc_button"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@string/settings_curr_loc_desc"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/curr_loc_button"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <RelativeLayout
            android:id="@+id/sign_out_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/sign_out_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/settings_sign_out"
                android:textColor="@android:color/black"
                android:textSize="21dp" />
                <!--android:textStyle="bold"-->

            <TextView
                android:id="@+id/sign_out_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/padd_10"
                android:layout_alignParentStart="true"
                android:layout_below="@id/sign_out_title"
                android:layout_toLeftOf="@+id/sign_out_button"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@string/settings_sign_out_desc"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/sign_out_button"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <RelativeLayout
            android:id="@+id/deactivate_account_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/deactivate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/settings_deactivate_account"
                android:textColor="@android:color/black"
                android:textSize="21dp"/>
            <!--android:textStyle="bold"-->

            <TextView
                android:id="@+id/deactivate_desc"
                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/deactivate_title"
                android:layout_toLeftOf="@+id/deactivate_button"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@string/settings_deactivate_desc"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/deactivate_button"
                android:layout_width="48dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.AppBarLayout>